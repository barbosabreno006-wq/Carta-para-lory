<script>
// Contador funcionando no iPhone/Textastic
document.addEventListener("DOMContentLoaded", function() {
    const startDate = new Date("2025-05-21T00:00:00").getTime();
    const counterEl = document.getElementById('counter');

    function updateCounter() {
        const now = new Date().getTime();
        let diff = now - startDate;

        const msInSec = 1000;
        const msInMin = msInSec * 60;
        const msInHour = msInMin * 60;
        const msInDay = msInHour * 24;

        const days = Math.floor(diff / msInDay);
        diff = diff % msInDay;
        const hours = Math.floor(diff / msInHour);
        diff = diff % msInHour;
        const minutes = Math.floor(diff / msInMin);
        diff = diff % msInMin;
        const seconds = Math.floor(diff / msInSec);

        counterEl.textContent = `${days} dias, ${hours}h ${minutes}m ${seconds}s desde que nos conhecemos`;
    }

    updateCounter();
    setInterval(updateCounter, 1000);
});

